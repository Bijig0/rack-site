# ==============================================
# Homez Environment Variables
# ==============================================
# Copy this file to .env.local and fill in the values

# ==============================================
# Database
# ==============================================
DATABASE_URL=postgres://user:password@host:port/database

# ==============================================
# Authentication
# ==============================================
# JWT secret for signing tokens (min 32 characters)
JWT_SECRET=your-secret-key-min-32-chars-long!

# Internal API key for server-to-server communication
INTERNAL_API_KEY=dev-internal-api-key-change-in-production

# ==============================================
# External APIs
# ==============================================
# Mapbox token for maps
NEXT_PUBLIC_MAPBOX_TOKEN=

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8080

# Public site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ==============================================
# Storage (S3-compatible)
# ==============================================
STORAGE_ENDPOINT=
STORAGE_REGION=us-east-1
STORAGE_BUCKET=
STORAGE_ACCESS_KEY_ID=
STORAGE_SECRET_ACCESS_KEY=
STORAGE_MAX_FILE_SIZE_MB=10

# ==============================================
# Sanity CMS
# ==============================================
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=

# ==============================================
# Sentry Error Tracking
# ==============================================
# Get your DSN from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=

# Sentry organization and project (for source map uploads)
SENTRY_ORG=
SENTRY_PROJECT=

# Auth token for uploading source maps (create at https://sentry.io/settings/account/api/auth-tokens/)
SENTRY_AUTH_TOKEN=

# Enable Sentry in development (optional, defaults to production only)
# SENTRY_DEBUG=true

# ==============================================
# Environment
# ==============================================
NODE_ENV=development
